			var arr = [], l = document.links;
			for(var i=0; i<l.length; i++) {
				l[i].setAttribute("target","_blank")
			}
		}*/

		window.addEventListener("click", function(e) {
			e = e || event;
			var tag = e.target.nodeName || e.target.tagName;
			tag = tag.toLowerCase();
			if (tag === "a") {
				e.preventDefault();
				domain_part = e.target.href.split("/wiki/")[0]
				e.target.href.replace(domain_part,"http://en.wikipedia.org")
				//converting links and opening in new tab
				modified_name = e.target.href.replace(domain_part,"http://en.wikipedia.org")
				window.open(modified_name);
			}
		});
	</script>
</body>

</html>